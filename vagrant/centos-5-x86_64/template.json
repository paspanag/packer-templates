{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-5-vagrant-x86_64",
      "boot_wait": "10s",
      "disk_size": 50000,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "accelerator": "kvm",
      "shutdown_command": "shutdown -P now",
      "http_directory": "http",
      "iso_checksum": "f2087f9af0d50df05144a1f0d1c5b404",
      "iso_checksum_type": "md5",
      "iso_url": "http://centos.osuosl.org/5.11/isos/x86_64/CentOS-5.11-x86_64-netinstall.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "../../scripts/epel.sh",
        "../../scripts/vbox-additions.sh",
        "../../scripts/setup-vagrant.sh",
        "../../scripts/propipe.sh",
        "../../scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ],
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "centos_ppadmin.box"
    }
  ]
}
